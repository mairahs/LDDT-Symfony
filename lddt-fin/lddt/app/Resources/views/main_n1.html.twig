<!-- Insertion Fichiers JS -->
<script src="https://code.jquery.com/jquery.js"></script>
<script type="text/javascript" src="js/bootstrap.js"></script>
<!-- Fin insertion JS -->
</body>
</html><!-- Fin du NIVEAU 1 -->