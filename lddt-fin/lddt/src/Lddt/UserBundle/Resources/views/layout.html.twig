{% extends "::main_n1.html.twig" %}

{% block body %}
    <div class="container margin-container-top">
        {% for type, messages in app.session.flashBag.all %}
            {% for message in messages %}
                <div class="{{ type }}">
                    {{ message|trans({}, 'FOSUserBundle') }}
                </div>
            {% endfor %}
        {% endfor %}
        {#Déclaration du block qui permettra l'injection des vues du N.3#}
        {% block fos_user_content %}
        {% endblock fos_user_content %}

    </div>
{% endblock body %}